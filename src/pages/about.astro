---
import { Default } from "@/layouts/Default";
import { Image } from "astro:assets";
import nyanCat from "@/shared/assets/images/nyan.gif";

const pageTitle = "🥑 About Me";
const description = "Passionate web developer";
---

<Default title={pageTitle} description={description}>
  <h1 class="iam">I am...</h1>
  <p>Continuously learning everything related to web development 📚</p>
  <p>
    Building web with
    <strong class="ts">typescript</strong>,
    <strong class="vue">vue</strong>,
    <strong class="react">react</strong>,
    <strong class="tailwind">tailwind</strong>,
    <strong class="nuxt">nuxt</strong>,
    <strong class="astro">astro</strong>,
    <strong class="strapi">strapi</strong>,
    <strong>fastify</strong>
    and many other tools.
  </p>
  <p>Begining in freelance 💹</p>
  <p>Wasting the best time of my life staring at monitors 😵‍💫</p>
  <Image src={nyanCat} alt="nyan cat gif" />
</Default>

<style lang="scss">
  p {
    font: {
      size: 1.4em;
      weight: 100;
    }
    line-height: 1.75em;

    strong {
      font-weight: 600;

      &.vue {
        color: #42b883;
      }
      &.react {
        color: #61dbfb;
      }
      &.ts {
        color: #3178c6;
      }
      &.nuxt {
        color: #00dc82;
      }
      &.tailwind {
        color: #38bdf8;
      }
      &.astro {
        color: #7d0aaa;
      }
      &.strapi {
        color: #271fe0;
      }
    }
  }
  .iam {
    margin-top: 0.6em;
    font: {
      size: 4em;
      weight: 900;
    }
    background: radial-gradient(
      circle,
      rgba(29, 195, 73, 1) 0%,
      rgba(81, 131, 164, 1) 64%,
      rgba(131, 70, 252, 1) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
