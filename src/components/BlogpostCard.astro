---
interface Props {
  title: string;
  description: string;
  image: {
    url: string;
    alt: string;
  };
}

const { title, description, image } = Astro.props;
---

<div class="card">
  <figure class="card__image">
    <img src={image.url} alt={image.alt} width={400} loading="lazy" />
  </figure>
  <section class="card__content">
    <h5 class="card__title">{title}</h5>
    <span class="card__description">{description}</span>
  </section>
</div>

<style lang="scss">
  .card {
    // border: 2px dashed var(--fg-dark);
    margin: 2em 0;
    width: 320px;
    height: 400px;
    margin-inline: auto;
    background: hsl(var(--bg-dark-hsl), 0.15);

    :global(.dark) & {
      background: hsl(var(--bg-light-hsl), 0.035);
    }

    &__image {
      width: 100%;
      height: 220px;
      & img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__content {
      margin: 1em;
    }

    &__title {
      font: {
        size: 1.5em;
        weight: 700;
      }
    }

    &__description {
      font: {
        weight: 50;
      }
    }
  }
</style>
