---
interface Props {
  title: string;
  description: string;
  date: Date;
  href: string;
  image: {
    url: string;
    alt: string;
  };
}

const { title, description, date, href, image } = Astro.props;
---

<div class="card">
  <figure class="card__image">
    <img src={image.url} alt={image.alt} width={400} loading="lazy" />
  </figure>
  <section class="card__content">
    <a href={href}>
      <h5 class="card__title">{title}</h5>
    </a>
    <div class="card__date">{new Date(date).toDateString()}</div>
    <span class="card__description">{description}</span>
  </section>
</div>

<style lang="scss">
  .card {
    margin: 2em 0;
    width: 320px;
    height: 400px;
    margin-inline: auto;
    background: hsl(var(--bg-dark-hsl), 0.15);

    transition: box-shadow 200ms ease-in, transform 200ms ease-in;

    :global(.dark) & {
      background: hsl(var(--bg-light-hsl), 0.035);
    }

    &:hover,
    &:focus {
      // box-shadow: 5px 0px 0px 1px var(--primary);
      box-shadow: 5px 5px 0px 1px var(--primary);
      transform: translateX(-2px) translateY(-2px);
    }

    &__image {
      width: 100%;
      height: 220px;
      & img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    &__content {
      margin: 1em;
    }

    &__title {
      font: {
        size: 1.5em;
        weight: 700;
      }

      &:hover {
        text: {
          decoration: underline;
        }
      }
    }

    &__description {
      font: {
        size: 0.85em;
        weight: 50;
      }
      text-overflow: ellipsis;
      margin: 0.5em 0;
    }

    &__date {
      color: hsl(var(--fg-dark-hsl), 0.5);
      margin: 0.2em 0;

      font: {
        style: italic;
        size: 0.85em;
      }
    }
  }
</style>
